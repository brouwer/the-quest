rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /config/{uid} {
      allow get: if request.auth != null
    }
    match /games/{uid} {
      allow get: if request.auth != null
    }
    match /posts/{id} {
      allow get: if request.auth != null
    }
    match /teams/{uid} {
      allow get: if request.auth.uid == uid
    }
  }
}
